{
  "name": "site",
  "version": "1.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development webpack serve --config ./webpack/Development.ts",
    "build": "NODE_ENV=production APP_ENV=production webpack --config ./webpack/Production.ts",
    "build:uat": "NODE_ENV=production APP_ENV=uat webpack --config ./webpack/Production.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format": "npx prettier --write .",
    "lint:scss": "npx stylelint '{src/**/*.scss,*.scss}' --fix",
    "prepare": "husky && husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.1",
    "axios": "^1.4.0",
    "classnames": "^2.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone-uploader": "^2.11.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "6.23.1",
    "react-toastify": "^10.0.4",
    "redux": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/plugin-transform-runtime": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@babel/runtime": "^7.22.3",
    "@storybook/addon-essentials": "^8.1.10",
    "@storybook/addon-interactions": "^8.1.10",
    "@storybook/addon-links": "^8.1.10",
    "@storybook/blocks": "^8.1.10",
    "@storybook/react": "^8.1.10",
    "@storybook/react-webpack5": "^8.1.10",
    "@storybook/testing-library": "^0.2.0",
    "@types/fork-ts-checker-webpack-plugin": "^0.4.5",
    "@types/node": "^20.3.1",
    "@types/postcss-preset-env": "^8.0.0",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.5",
    "@types/react-redux": "^7.1.25",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "@types/webpack": "^5.28.1",
    "@types/webpack-dev-server": "^4.7.2",
    "@types/webpack-env": "^1.18.1",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "babel-loader": "^9.1.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "dotenv": "^16.1.4",
    "eslint": "^9.5.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.8.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "mini-css-extract-plugin": "^2.7.6",
    "node-polyfill-webpack-plugin": "^4.0.0",
    "postcss": "^8.4.24",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^9.1.0",
    "prettier": "^3.3.2",
    "reset-css": "^5.0.1",
    "sass": "^1.62.1",
    "sass-loader": "^14.1.1",
    "sass-resources-loader": "^2.2.5",
    "storybook": "^8.1.10",
    "style-loader": "^4.0.0",
    "stylelint": "^16.9.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-scss": "^6.7.0",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "webpack": "^5.86.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2",
    "webpack-merge": "^5.9.0"
  },
  "lint-staged": {
    "*.scss": "stylelint --fix",
    "*.{js,jsx,ts,tsx,json,md}": "prettier --write"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ],
    "plugins": [
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "extends": [
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:storybook/recommended"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/prop-types": "off"
    },
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    }
  }
}
